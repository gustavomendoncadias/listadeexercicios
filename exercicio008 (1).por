programa {
  funcao inicio() {
    Algoritmo PositivoOuNegativo
Var
   valor: Real

Inicio
   escreva("Digite um valor: ")
   leia(valor)

   Se valor > 0 entao
      escreva("O valor é positivo.")
   Senao Se valor < 0 Entao
      escreva("O valor é negativo.")
   Senao
      escreva("O valor é igual a zero.")
   FimSe

FimAlgoritmo

  }
}
