programa {
  funcao inicio() {
    algoritmo "VerificarIdade"
var
   idade: inteiro

inicio
   // Solicita a idade
   escreva("Digite a idade: ")
   leia(idade)

   // Verifica se a pessoa é maior ou menor de 18 anos
  se idade >= 18 entao
   escreva("Você é maior de 18 anos.")
   senao
  escreva("Você é menor de 18 anos.")
   fimse
fimalgoritmo

  }
}
