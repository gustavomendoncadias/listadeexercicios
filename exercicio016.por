programa {
  funcao inicio() {
    algoritmo "ContagemNumerosPares"
var
   limite, numero: inteiro

inicio
   // Solicita o número limite
   escreva("Digite um número limite: ")
   leia(limite)

   // Inicializa o número
   numero <- 0

   // Mostra a contagem de números pares até o limite
   enquanto numero <= limite faca
      escreva(numero, " ")
      numero <- numero + 2
   fimenquanto
fimalgoritmo

  }
}
